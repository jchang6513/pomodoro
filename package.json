{
  "name": "pomodoro",
  "displayName": "Pomodoro",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pomodoro.start",
        "title": "Start Pomodoro"
      },
      {
        "command": "pomodoro.stop",
        "title": "Stop Pomodoro"
      },
      {
        "command": "pomodoro.resume",
        "title": "Resume Pomodoro"
      },
      {
        "command": "pomodoro.reset",
        "title": "Reset Pomodoro"
      },
      {
        "command": "pomodoro.toggle",
        "title": "Toggle Pomodoro"
      }
    ],
    "configuration": [
      {
        "type": "object",
        "title": "Pomodoro Setting",
        "properties": {
          "conf.pomodoro.work": {
            "type": "number",
            "default": 25,
            "description": "Work time in minutes"
          },
          "conf.pomodoro.shortBreak": {
            "type": "number",
            "default": 5,
            "description": "Short break time in minutes"
          },
          "conf.pomodoro.longBreak": {
            "type": "number",
            "default": 15,
            "description": "Long break time in minutes"
          },
          "conf.pomodoro.longBreakInterval": {
            "type": "number",
            "default": 4,
            "description": "Long break interval (times of short break)"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.77.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.3.0"
  }
}
